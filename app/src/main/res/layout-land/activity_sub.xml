<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="dam.pmdm.parametres.subActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/tv_benvinguda"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etedat"
        android:layout_below="@+id/tv_benvinguda"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Edat"
        android:id="@+id/tv_edat"
        android:layout_below="@+id/tv_benvinguda"
        android:layout_toStartOf="@+id/etedat" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acabar"
        android:id="@+id/b_acabar"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ValoraciÃ³n:   "
        android:id="@+id/tVValor"
        android:layout_below="@+id/etedat"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVNumvalor"
        android:layout_alignTop="@+id/tVValor"
        android:layout_above="@+id/tVNumPunt"
        android:layout_toEndOf="@+id/tVCarnet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntos:   "
        android:id="@+id/tVPunt"
        android:layout_below="@+id/tVValor"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVNumPunt"
        android:layout_below="@+id/tVValor"
        android:layout_alignEnd="@+id/tVValor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carnet de conducir:   "
        android:id="@+id/tVCarnet"
        android:layout_below="@+id/tVPunt"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tVCoch"
        android:layout_below="@+id/tVNumPunt"
        android:layout_alignEnd="@+id/tv_benvinguda"
        android:layout_alignBottom="@+id/tVCarnet"
        android:layout_toEndOf="@+id/tVNumvalor" />
</RelativeLayout>
